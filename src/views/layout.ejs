<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSV Viewer</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/1e4325dabb.js" crossorigin="anonymous"></script>

    <style>
        .fixed-header {
            position: sticky;
            top: 0;
            background-color: #fff;
            z-index: 1000;
        }

        @media screen and (max-width: 500px) {
            .search-container{
                width: 100% !important;
            }
        }
    </style>
</head>

<body>

    <div class="container-fluid p-0">
        <%-body%>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        document.getElementById("search").addEventListener("submit", (event)=>{
            event.preventDefault();
            const key = document.getElementById("searchInput").value;
            document.getElementById("searchInput").value = "";
            searchFunction(key);
        });

        async function searchFunction(key){
            const collection = document.getElementById("title").innerText;
            const url = `/files/renderFile?collection=${collection}&page=1&searchKey=${key}`;
            const response = await fetch(url);
            const html = await response.text();
            // console.log(html);
            // if(html){
            //     document.querySelector("html").remove();
            //     document.write(html);
            // }
            window.location.href = url;
        }

        
    </script>

</body>

</html>